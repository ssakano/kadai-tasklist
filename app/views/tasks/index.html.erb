<h1>タスク一覧</h1>

<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>

<% if @tasks.any? %>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>タスク</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
<% @tasks.each do |task| %>
    <tr>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %></td>
    </tr>
<% end %>
        </tbody>
    </table>
    <div>
        
<%= paginate @tasks %>

    </div>
<% end %>


